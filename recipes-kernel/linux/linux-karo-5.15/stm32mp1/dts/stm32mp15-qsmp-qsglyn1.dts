/dts-v1/;

/plugin/;

#include <dt-bindings/interrupt-controller/arm-gic.h>

/ {
	#address-cells = <1>;
	#size-cells = <0>;

	fragment@0 {
		reg = <0>;
		target-path = "/";

		__overlay__ {
			model = "Ka-Ro electronics GmbH QSMP-1570 module on QSGLYN1 baseboard";
		};
	};

	fragment@1 {
		reg = <1>;
		target = <&i2c6>;

		__overlay__ {
			#address-cells = <1>;
			#size-cells = <0>;

			touchpanel@41 {
				compatible = "ilitek,ili2130";
				reg = <0x41>;
				interrupt-parent = <&gpiod>;
				interrupts = <12 IRQ_TYPE_EDGE_FALLING>;
				wakeup-source;
				status = "okay";
			};
		};
	};
};
