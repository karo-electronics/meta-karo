+			result = -EINVAL;
+		}
+	} else {
+		part->addr = simple_strtoull(p, &tail, 0);
+		if (tail == p || *tail != '\0') {
+			stm32prog_err("Layout: invalid offset '%s'", p);
+			result = -EINVAL;
+		}
+	}
+	/* pr_debug("addr : 0x%08llx, part_id : %d\n", part->addr,
